<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.speedpoints.speedpoints.ConfigurationFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:text="@string/points_text"
            android:id="@+id/textViewConfiguration"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            android:height="@dimen/nav_header_vertical_spacing"
            android:maxLength="4"
            android:textAlignment="center"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_weight="0.03" />

        <Button
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginLeft="@android:dimen/app_icon_size"
            android:layout_marginRight="@android:dimen/app_icon_size"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</FrameLayout>
